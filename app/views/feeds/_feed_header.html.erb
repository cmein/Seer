<div id="feed_info" class="header_info">
	<h1><%= link_to feed.name, category_feed_path(category,feed) %></h1> 
	<h5 class="feed_bit">Category: <%= link_to category.name, category_path(category) %></h5>		
	<h5 class="feed_bit">Feed URL: <a href="<%=feed.url%>"><%= feed.url %></a></h5>
</div>

<div id="feed_controls" class="header_controls">
	<%= link_to image_tag("ui/edit.png", :alt => "Edit", :title => "Edit"), edit_category_feed_path(category, feed) %> 
	<%= link_to image_tag("ui/delete.png", :alt => "Delete", :title => "Delete"), [category, feed], confirm: 'Are you sure?', method: :delete %>
</div>

<hr />

