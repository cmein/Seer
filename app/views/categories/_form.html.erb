<%= form_for @category, :html => {:class => "gen_form category_form"} do |f| %>

	<%= render "shared/error_messages", :target => @category %>	

	<%= f.label :name %><br />
	<%= f.text_field :name %><br /><br />

	<%= f.label :alert_threshold %><br />
	<%= f.text_field :alert_threshold %><br /><br />

	<%= f.label :word_settings %><br />
	<%= f.fields_for :word_settings do |w| %>
		<%= w.label :trial_length %>: <%= w.text_field :trial_length, :value => @category.word_settings["trial_length"] %>
        <%= w.label :blacklist_z %>: <%= w.text_field :blacklist_z, :value => @category.word_settings["blacklist_z"] %>
	<% end %><br /><br />

	<%= f.label :feed_settings %><br />
	<%= f.fields_for :feed_settings do |w| %>
		<%= w.label :trial_length %>: <%= w.text_field :trial_length, :value => @category.feed_settings["trial_length"] %>
        <%= w.label :min_post_rate %>: <%= w.text_field :min_post_rate, :value => @category.feed_settings["min_post_rate"] %>
        <%= w.label :prune_threshold %>: <%= w.text_field :prune_threshold, :value => @category.feed_settings["prune_threshold"] %>
	<% end %><br /><br />

	<%= f.label :map %><br />
	<%= f.fields_for :map do |w| %>
		<%= w.label :type %>: <%= w.text_field :type, :value => @category.map["type"] %>
        <%= w.label :subset_size %>: <%= w.text_field :subset_size, :value => @category.map["subset_size"] %>
        <%= w.label :alpha %>: <%= w.text_field :alpha, :value => @category.map["alpha"] %>
	<% end %><br /><br />

	<%= f.submit %>
<% end %>
